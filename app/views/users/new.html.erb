<h1>Register</h1>

<%= form_with model: @user, url: register_path, local: true do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red;">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Register" %>
  </div>
<% end %>

<p>
  Already have an account? <%= link_to "Login", login_path %>
</p>
